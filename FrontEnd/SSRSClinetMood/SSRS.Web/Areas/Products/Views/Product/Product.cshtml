@model SSRS.Web.Areas.Products.Models.ProductViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="card card-gray">
            <div class="card-header">
                <h3 class="card-title">Product Information</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                @Html.HiddenFor(model => model.Id, new { id = "Id" })

                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="ProductName">Product Name <span class="text-red">*</span></label>
                            @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control", @required = "required", id = "ProductName" })
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="SKUCode">SKU Code</label>
                            @Html.TextBoxFor(m => m.SKUCode, new { @class = "form-control", id = "SKUCode" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="Price">Price <span class="text-red">*</span></label>
                            @Html.TextBoxFor(m => m.Price, new { @class = "form-control", @required = "required", type = "number", step = "0.01", id = "Price" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="StockQuantity">Stock Quantity <span class="text-red">*</span></label>
                            @Html.TextBoxFor(m => m.StockQuantity, new { @class = "form-control", @required = "required", type = "number", id = "StockQuantity" })
                        </div>
                    </div>
                </div>

                <div class="row align-items-end">
                    <div class="col-md-11">
                        <div class="form-group">
                            <label for="Description">Description</label>
                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = "3" })
                        </div>
                    </div>

                    <div class="col-md-1">
                        <div class="form-group mb-5">
                            
                            <button id="btnSave" class="btn btn-primary btn-sm" type="button">Submit</button>
                        </div>
                    </div>
                </div>

              
            </div>
        </div>
    </div>
    <div class="container-fluid" id="ProductList"></div>

</section>

@section Scripts {
   
   <script src="~/adminlite/customejs/product.js"></script>
}
